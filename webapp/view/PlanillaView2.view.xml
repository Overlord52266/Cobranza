<mvc:View 
controllerName  ="cobranza.controller.PlanillaView2"
xmlns:mvc       ="sap.ui.core.mvc" 
displayBlock    ="true"
xmlns:core      ="sap.ui.core"
xmlns           ="sap.m"
xmlns:plugins   ="sap.m.plugins" >
   
   <Page 
					id				=	"page" 
					title			=	""
					showNavButton	=	"true"
					navButtonPress	=	"onNavBack">
					<content>
						<!--Cabecera-->
						<ObjectHeader
							title				=	"Planilla : {DetallePlanilla>/dataPrincipal/planilla}"
							backgroundDesign	=	"Translucent"
							icon				=	"sap-icon://activity-items"
							titleLevel			=	"H3"
							responsive			=	"true">
							<attributes>

                                <ObjectAttribute 
									title	=	"Estado" 
									text	=	"{DetallePlanilla>/dataPrincipal/status}"
									active	=	"true"
									press	=	"onNavBack"/>

                                <ObjectAttribute 
									title	=	"Fecha de EmisiÃ³n" 
									text	=	"{DetallePlanilla>/dataPrincipal/fecha_emi}"
									active	=	"true"
									press	=	"onNavBack"/>    

                                
                                <!-- <ObjectAttribute 
									title	=	"Deposito" 
									text	=	"0.00"
									active	=	"true"
									press	=	"onNavBack"/>      -->
                                <ObjectAttribute 
									title	=	"Importe Total" 
									text	=	"{DetallePlanilla>/dataPrincipal/importe_cobrado}"
									active	=	"true"
									press	=	"onNavBack"/> 
                                                
							</attributes>
							<!-- <statuses>
								<ObjectStatus	
									title	=	"{i18n>hdClaseDocSolicitud}" 
									text	=	"{i18n>hdClaseDocSolicitudText}"/>
								<ObjectStatus	
									id		=	"osFechaSolicitd"
									title	=	"{i18n>hdFechaSolSolicitud}" 
									text	=	"Hoy"/>
							</statuses> -->
						</ObjectHeader>
						
						<!--Cuerpo-->
            	<IconTabBar id="idIconTabBar5" headerMode="Inline" class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter
					
                    icon="sap-icon://simple-payment"
					count="0"
					text="Pagos de la Planilla"
					key="All" >
					 <Table id="idDetails123"
                            fixedLayout="Strict"
                            selectionChange="selectionChangePagosPlanilla"
                            mode="None"

                            items="{DetallePlanilla>/data}"
                            autoPopinMode="true"
                            contextualWidth="Auto"
                            growing="true"
                            
                            >
                            <dependents>
                                <plugins:ColumnResizer/>
                            </dependents>

                             <headerToolbar  >
                            <OverflowToolbar   >
                                <content>
                                <ToolbarSpacer/>
                                <Button 
                                id      ="NuevoPago"  
                                enabled ="{=${DetallePlanilla>/dataPrincipal/status} !== 'Cerrado' }"
                                text    ="Nuevo Pago" 
                                press   ="Nuevopago" 
                                icon    ="sap-icon://add" 
                                type    ="Emphasized" 
                                width   ="auto"/>

                                </content>
                            </OverflowToolbar>
                        </headerToolbar>

                            <columns  >
                                <Column
                                    hAlign="Center"
                                    width="auto">
                                    
                                    <Text text="Documento" />
                                </Column>

                                <Column
                                    width="auto"
                                    hAlign="Center">
                                    <Text text="Cliente" />
                                </Column>

                                <Column
                                    width="auto"
                                    hAlign="Center">
                                    <Text text="Tipo de Pago" />
                                </Column>

                                <Column
                                    width="auto"
                                    hAlign="Center">
                                    <Text text="Importe" />
                                </Column>

                                <Column
                                    width="auto"
                                    hAlign="Center">
                                    <Text text="Saldo" />
                                </Column>

                                <Column
                                    width="auto"
                                    hAlign="Center">
                                    <Text text="Vcto.Documento" />
                                </Column>

                                <Column
                                    width="6rem"
                                    hAlign="Center">
                                    <Text text="" />
                                </Column>

                            </columns>
                            <items>
                                <ColumnListItem  press="OnPressHeader" vAlign="Middle" type="Active">
                                    <cells>
                               
                                        <Text
                                            text="{DetallePlanilla>documento}" />

                                        <Text
                                            text="{DetallePlanilla>cliente}" />
                                            
                                        <Text
                                            text="{DetallePlanilla>medio_pago}" />
                                        
                                        <Text
                                            text="{DetallePlanilla>importe_cobrado}" />

                                        <Text
                                            text="{DetallePlanilla>saldo}" />

                                        <Text
                                            text="{DetallePlanilla>fecha_ven}" />

                                        <HBox justifyContent="Center" alignItems="Center" >

                                        <Button
                                        press	=	"onPressModificar"
                                        type	=	"Accept"
                                        icon	=	"sap-icon://edit"
                                        class   =   "sapUiTinyMarginEnd"
                                        enabled =   "{=${DetallePlanilla>/dataPrincipal/status} !== 'Cerrado' }"
                                        />

                                        <Button
                                        press	=	"onPressEliminar"
                                        type	=	"Reject"
                                        icon	=	"sap-icon://delete"
                                        enabled =   "{=${DetallePlanilla>/dataPrincipal/status} !== 'Cerrado' }"
                                        />

                                        </HBox>
                                      
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
				</IconTabFilter>
				
			</items>
		</IconTabBar>
                        
					</content>
					<footer>
					<Toolbar>
						<!--<Button-->
						<!--	id		=	"btnHistorialSolicitudes"-->
						<!--	icon	=	"sap-icon://history"-->
						<!--	press	=	"openHistorialSolicitudes"-->
						<!--	type	=	"Transparent"/>-->
						<!-- <Button
							id		=	"btnHistorialSolicitud"
							press	=	"goHistorial"
							type	=	"Transparent"
							text	=	"{i18n>btnHistorialSolicitud}"
							icon	=	"sap-icon://history"/>
						<ToolbarSpacer/>
						<Button 
							id		=	"btnGrabarSolicitud"
							text	=	"{i18n>btnGuardarSolicitud}"
							type	=	"Transparent"
							press	=	"enviarSolicitud"
							icon	=	"sap-icon://save"/> -->
                <ToolbarSpacer/>
                <Button text="Cerrar Planilla" press="OnPressCerarPlanilla" type="Reject" icon="" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"/>
                            
					</Toolbar>
				</footer>
    </Page>
   
</mvc:View>
