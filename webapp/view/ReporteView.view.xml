                    <HBox alignItems="Center" justifyContent="Center" >
                    <Button type="Back" press="onPressBackMenu" class="" />
                    <Title wrapping="true" text="Reporte Cuentas por Cobrar" class="sapUiTinyMarginTop sapUiTinyMarginBegin"/>    
                    </HBox>
					
				</f:heading>
				
				<f:actions>
