		<columns>
			<Column demandPopin="true" hAlign="Center" width="auto">
				<header>
					<Text text="Documento" />
				</header>
			</Column>

            <Column demandPopin="true" hAlign="Center" width="auto">
				<header>
					<Text text="Tipo Doc." />
				</header>
			</Column>

			<Column
				minScreenWidth="Desktop"
                hAlign="Center"
				demandPopin="true"
                width="auto">
				<header>
					<Text text="RUC/DNI" />
				</header>
			</Column>
 
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center"
                width="auto">
				<header>
					<Text text="Cliente" />
				</header>
			</Column>

            <Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center"
                width="auto">
				<header>
					<Text text="Mon" />
				</header>
			</Column>

            <Column hAlign="Center" minScreenWidth="Desktop" demandPopin="true" width="auto">
				<header>
					<Text text="Total Fact" />
				</header>
			</Column>

			<Column  minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="auto">
				<header>
					<Text text="Saldo Pagar" />
				</header>
			</Column>

            <Column
				minScreenWidth="Desktop"
                hAlign="Center"
				demandPopin="true"
                width="auto">
				<header>
					<Text text="Imp de Ret." />
				</header>
			</Column>

            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="auto">
				<header>
					<Text text="F. de Emis." />
				</header>
			</Column>

            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="auto">
				<header>
					<Text text="F. de Vento" />
				</header>
			</Column>

            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="auto">
				<header>
					<Text text="Cond. de Pago" />
				</header>
			</Column>

            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="auto">
				<header>
					<Text text="Dias Venc." />
				</header>
			</Column>

            <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="4rem">
				<header>
					<Text text="Agente Ret." />
				</header>
			</Column>

            <!-- <Column minScreenWidth="Desktop" demandPopin="true" hAlign="Center" width="auto">
